<Window x:Class="SDMM.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDMM"
        mc:Ignorable="d"
        Title="Loading" Height="300" Width="500" ResizeMode="CanMinimize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" >Загрузка</TextBlock>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock x:Name="currentNumber" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"></TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24">/</TextBlock>
            <TextBlock x:Name="highestNumber" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
